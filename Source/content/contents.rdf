<?xml version="1.0"?>

<RDF:RDF xmlns:RDF="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
    xmlns:chrome="http://www.mozilla.org/rdf/chrome#">

    <RDF:Seq about="urn:mozilla:package:root">
        <RDF:li resource="urn:mozilla:package:imagezoom"/>
    </RDF:Seq>

    <RDF:Description about="urn:mozilla:package:imagezoom"
        chrome:displayName="Image Zoom"
        chrome:author="Jason Adams"
	chrome:authorURL="http://www.yellowgorilla.net/imagezoom"
        chrome:name="imagezoom"
        chrome:extension="true"
        chrome:description="Adds zoom functionality for images"
        chrome:settingsURL="chrome://imagezoom/content/options.xul">        
		>

    </RDF:Description>

	<RDF:Seq about="urn:mozilla:overlays">
    		<!-- Mozilla -->
    		<RDF:li resource="chrome://navigator/content/navigator.xul"/>
    		<RDF:li resource="chrome://communicator/content/pref/preftree.xul"/>    		

    		<!-- Firefox -->
    		<RDF:li resource="chrome://browser/content/browser.xul"/>

    		<!-- Thunderbird / Mozilla Mail -->
    		<RDF:li resource="chrome://messenger/content/mailWindowOverlay.xul"/>
	</RDF:Seq>

	<!-- Mozilla -->
	<RDF:Seq about="chrome://navigator/content/navigator.xul">
		<RDF:li>chrome://imagezoom/content/imageZoomOverlay.xul</RDF:li>
	</RDF:Seq>
	
	<RDF:Seq about="chrome://communicator/content/pref/preftree.xul">
		<RDF:li>chrome://imagezoom/content/options_mozOverlay.xul</RDF:li>
	</RDF:Seq>	

	<!-- Firefox -->
	<RDF:Seq about="chrome://browser/content/browser.xul">
		<RDF:li>chrome://imagezoom/content/imageZoomOverlay.xul</RDF:li>
	</RDF:Seq>
	
	<!-- Thunderbird --> 
	<RDF:Seq about="chrome://messenger/content/mailWindowOverlay.xul">
		<RDF:li>chrome://imagezoom/content/imageZoomOverlayMail.xul</RDF:li>
	</RDF:Seq>
</RDF:RDF>

